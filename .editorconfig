# Настройки редактора
#
# editorconfig.org
# https://habr.com/ru/post/220131/

root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{go,py,rb,php}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false
