{
	"editor.formatOnSave": true,
	"editor.codeActionsOnSave": {
		"source.fixAll": true,
		"source.sortImports": true
	},
	"scss.validate": false,
	"less.validate": false,
	"css.validate": false,
	"stylelint.enable": true,
	"stylelint.validate": [
		"css",
		"less",
		"postcss",
		"sass",
		"scss"
	],
	"puglint.enable": true
}
