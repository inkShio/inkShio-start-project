{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-clean-order"
  ],
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "order/order": [
      {
        "type": "at-rule",
        "name": "import"
      },
      {
        "type": "at-rule",
        "name": "forward"
      },
      {
        "type": "at-rule",
        "name": "use"
      },
      "dollar-variables",
      "at-variables",
      "custom-properties",
      {
        "type": "at-rule",
        "name": "custom-media"
      },
      {
        "type": "at-rule",
        "name": "function"
      },
      {
        "type": "at-rule",
        "name": "mixin"
      },
      {
        "type": "at-rule",
        "name": "extend"
      },
      {
        "type": "at-rule",
        "name": "include"
      },
      "declarations",
      {
        "type": "at-rule",
        "name": "include",
        "parameter": "mq",
        "hasBlock": true
      },
      {
        "type": "at-rule",
        "name": "include",
        "parameter": "screen",
        "hasBlock": true
      },
      {
        "type": "at-rule",
        "name": "include",
        "parameter": "max-screen",
        "hasBlock": true
      },
      {
        "type": "at-rule",
        "name": "include",
        "parameter": "min-screen",
        "hasBlock": true
      },
      {
        "type": "rule",
        "selector": "/^&::[\\w-]+/",
        "hasBlock": true
      },
      "rules",
      {
        "type": "at-rule",
        "name": "media",
        "hasBlock": true
      }
    ],
    "no-empty-source": null
  }
}